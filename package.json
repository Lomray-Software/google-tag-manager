{
  "name": "@lomray/google-tag-manager",
  "version": "1.0.0",
  "description": "Google Tag manager for React.",
  "type": "module",
  "keywords": [
    "js",
    "google",
    "plugin",
    "react",
    "tag",
    "manager"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lomray-Software/google-tag-manager.git"
  },
  "bugs": {
    "url": "https://github.com/Lomray-Software/google-tag-manager/issues"
  },
  "homepage": "https://github.com/Lomray-Software/google-tag-manager",
  "author": "Mikhail Yarmaliuk",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "release": "npm run build && cd lib && npm publish",
    "lint:check": "eslint \"src/**/*.{ts,tsx,*.ts,*tsx}\"",
    "lint:format": "eslint --fix \"src/**/*.{ts,tsx,*.ts,*tsx}\"",
    "ts:check": "tsc --project ./tsconfig.json --skipLibCheck --noemit",
    "test": "vitest run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@lomray/eslint-config-react": "^5.0.6",
    "@lomray/prettier-config": "^2.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/react": "^14.2.1",
    "@types/chai": "^4.3.11",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@vitest/coverage-v8": "^1.2.2",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rollup": "^4.10.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-ts": "^3.4.5",
    "semantic-release": "^21.1.2",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
